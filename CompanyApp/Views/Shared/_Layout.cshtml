<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CompanyApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CompanyApp.styles.css" asp-append-version="true" />
    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        /* Стили для выделения выбранного элемента */
        .nav-link.active {
            
            border-bottom: 2px solid green;
            color: black !important;
        }

        /* Логотип и ссылки */
        .navbar-brand img {
            height: 40px;
        }

        .navbar {
            padding: 10px 0;
        }

        .nav-item {
            padding: 0 15px;
        }

        /* Для иконок */
        .icon-link {
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 16px;
        }

            .icon-link img {
                height: 20px;
            }

        /* Для отображения текста справа */
        .navbar-text {
            font-size: 14px;
            color: #6c757d;
        }
    </style>


</head>
<body class="d-flex custom-bg-color flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <div class="container-fluid">
                <!-- Логотип -->
                <p class="navbar-brand">
                    ComputerApp`s
                </p>

                <!-- Кнопка для мобильных устройств -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Ссылки по центру -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Office")" id="nav-link-office">Предприятия</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Create", "Office")" id="nav-link-createoffice">Создать предприятие</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="nav-link-info" asp-action="Privacy" asp-controller="Home">О приложении</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-light border-top">
        <div class="container">
            &copy; 2024 - CompanyApp - <a asp-area="" asp-controller="Office" asp-action="Index">Главная</a>
        </div>
    </footer>




    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const navLinks = document.querySelectorAll('.nav-link');

            // Загрузить активную ссылку из localStorage
            const activeLinkId = localStorage.getItem('activeLink');

            if (activeLinkId) {
                // Если есть сохраненная активная ссылка, установить её активной
                const activeLink = document.getElementById(activeLinkId);
                if (activeLink) {
                    activeLink.classList.add('active');
                }
            } else {
                // По умолчанию активная ссылка - первая (если нужно)
                navLinks[0].classList.add('active');
            }

            navLinks.forEach(link => {
                link.addEventListener('click', function () {
                    // Удалить класс active у всех ссылок
                    navLinks.forEach(link => link.classList.remove('active'));

                    // Добавить класс active к выбранной ссылке
                    this.classList.add('active');

                    // Сохранить выбранную ссылку в localStorage
                    localStorage.setItem('activeLink', this.id);
                });
            });
        });
    </script>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
