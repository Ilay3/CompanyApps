@model CompanyApp.Application.DTOs.TransferComputerDto

@{
    ViewData["Title"] = "Transfer Computer";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <!-- Заголовок -->
                    <h2 class="card-title mb-4" style="color: #158e3a;">Передача компьютера</h2>

                    <!-- Форма передачи компьютера -->
                    <form asp-action="Transfer" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Текущий сотрудник -->
                        <div class="mb-3">
                            <label class="form-label">Текущий сотрудник:</label>
                            <input type="text" value="@Model.CurrentEmployeeName" class="form-control" readonly />
                        </div>

                        <!-- Новый сотрудник -->
                        <div class="mb-3">
                            <label for="NewEmployeeId" class="form-label">Новый сотрудник</label>
                            <select asp-for="NewEmployeeId" class="form-select" asp-items="ViewBag.Employees">
                                <option value="">Выберите сотрудника</option>
                            </select>
                        </div>

                        <!-- Скрытое поле для ID компьютера -->
                        <input type="hidden" asp-for="ComputerId" />

                        <!-- Кнопки -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-success">Передать</button>
                            <a asp-action="GetComputersByOfficeId" asp-controller="Computer" asp-route-officeId="@ViewBag.OfficeId" class="btn btn-outline-secondary">
                                Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
}
