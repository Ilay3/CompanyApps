@model CompanyApp.Application.DTOs.OfficeDto

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <h4 class="mb-4" style="color: #158e3a;">Создание нового предприятия</h4>

                    <form id="officeForm" class="needs-validation" novalidate asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Название предприятия</label>
                            <input asp-for="Name" class="form-control border-success" required />
                            <div class="invalid-feedback">Введите коректное название предприятия.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="City" class="form-label">Город</label>
                            <input asp-for="City" class="form-control border-success" required />
                            <div class="invalid-feedback">Введите название города.</div>
                        </div>

                        <button type="submit" class="btn btn-success w-100" style="background-color: #158e3a; border-color: #158e3a;">
                            Создать предприятие
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    // Включаем Bootstrap валидацию
    (function () {
        'use strict';
        // Выбираем все формы с классом .needs-validation
        var forms = document.querySelectorAll('.needs-validation');

        // Добавляем обработчик события submit для всех форм
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                // Если форма невалидна, предотвращаем отправку
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }

                // Добавляем класс 'was-validated' к форме, чтобы отобразить ошибки
                form.classList.add('was-validated');
            }, false);
        });
    })();

</script>