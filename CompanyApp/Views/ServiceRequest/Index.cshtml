@model IEnumerable<CompanyApp.Application.DTOs.ServiceRequestDto>

@{
    ViewData["Title"] = "Заявки на обслуживание";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="card-title" style="color: #158e3a;">Заявки на обслуживание</h2>
                        <div>
                            <a asp-action="Create" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Новая заявка
                            </a>
                            @if (User.IsInRole("SysAdmin"))
                            {
                                <a asp-action="Report" class="btn btn-primary">
                                    <i class="bi bi-file-earmark-bar-graph"></i> Отчеты
                                </a>
                            }
                        </div>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>№</th>
                                    <th>Дата</th>
                                    <th>Тема</th>
                                    <th>Тип</th>
                                    <th>Приоритет</th>
                                    <th>Статус</th>
                                    <th>Создатель</th>
                                    <th>Исполнитель</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in Model)
                                {
                                    <tr>
                                        <td>@request.Id</td>
                                        <td>@request.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@request.Title</td>
                                        <td>
                                            @switch (request.RequestType)
                                            {
                                                case "Computer":
                                                    <span class="badge bg-info">Компьютер</span>
                                                    break;
                                                case "Equipment":
                                                    <span class="badge bg-warning">Оборудование</span>
                                                    break;
                                                case "Software":
                                                    <span class="badge bg-primary">ПО</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">Другое</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            @switch (request.Priority)
                                            {
                                                case "Critical":
                                                    <span class="badge bg-danger">Критический</span>
                                                    break;
                                                case "High":
                                                    <span class="badge bg-warning">Высокий</span>
                                                    break;
                                                case "Medium":
                                                    <span class="badge bg-info">Средний</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">Низкий</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            @switch (request.Status)
                                            {
                                                case "New":
                                                    <span class="badge bg-primary">Новая</span>
                                                    break;
                                                case "InProgress":
                                                    <span class="badge bg-warning">В работе</span>
                                                    break;
                                                case "Resolved":
                                                    <span class="badge bg-success">Решена</span>
                                                    break;
                                                case "Closed":
                                                    <span class="badge bg-secondary">Закрыта</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@request.CreatedByUserName</td>
                                        <td>@(request.AssignedToUserName ?? "Не назначен")</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@request.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>