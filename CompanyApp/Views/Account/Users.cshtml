@model List<CompanyApp.Models.UserViewModel>

@{
    ViewData["Title"] = "Управление пользователями";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="card-title" style="color: #158e3a;">Управление пользователями</h2>
                        <a asp-action="Register" class="btn btn-success">
                            <i class="bi bi-person-plus"></i> Новый пользователь
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Имя</th>
                                    <th>Email</th>
                                    <th>Роли</th>
                                    <th>Сотрудник</th>
                                    <th>Статус</th>
                                    <th>Дата создания</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            @foreach (var role in user.Roles)
                                            {
                                                <span class="badge bg-primary">@role</span>
                                            }
                                        </td>
                                        <td>@(user.EmployeeName ?? "Не назначен")</td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-success">Активен</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Заблокирован</span>
                                            }
                                        </td>
                                        <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDelete('@user.Id')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

