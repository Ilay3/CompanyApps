@model CompanyApp.Application.DTOs.DepartmentDto

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <!-- Заголовок страницы -->
                    <h2 class="card-title mb-4" style="color: #158e3a;">Редактирование отдела</h2>
                    <!-- Форма редактирования -->
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Поле для редактирования названия отдела -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Название отдела</label>
                            <input asp-for="Name" class="form-control" placeholder="Введите название отдела" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Выпадающий список офисов -->
                        <div class="mb-3">
                            <label asp-for="OfficeId" class="form-label">Офис</label>
                            <select asp-for="OfficeId" class="form-select">
                                <option value="">Выберите офис</option>
                                @foreach (var office in ViewBag.Offices)
                                {
                                    <option value="@office.Value">@office.Text</option>
                                }
                            </select>
                            <span asp-validation-for="OfficeId" class="text-danger"></span>
                        </div>

                        <!-- Выпадающий список корпусов -->
                        <div class="mb-3">
                            <label asp-for="BuildingId" class="form-label">Корпус</label>
                            <select asp-for="BuildingId" class="form-select">
                                <option value="">Выберите корпус</option>
                                @foreach (var building in ViewBag.Buildings)
                                {
                                    <option value="@building.Value">@building.Text</option>
                                }
                            </select>
                            <span asp-validation-for="BuildingId" class="text-danger"></span>
                        </div>

                        <!-- Кнопки сохранения и отмены -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Сохранить
                            </button>
                            <a asp-controller="Building" asp-action="Details" asp-route-id="@Model.BuildingId" class="btn btn-secondary ms-2">
                                <i class="fas fa-times"></i> Отменить
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
}
