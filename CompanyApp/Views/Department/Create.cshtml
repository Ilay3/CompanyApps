@model CompanyApp.Application.DTOs.CreateDepartmentDto
@{
    ViewData["Title"] = "Создание отдела";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card hover-lift animate-fade-in-up">
                <div class="card-body">
                    <h2 class="text-gradient mb-4">@ViewData["Title"]</h2>

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">
                                <i class="bi bi-diagram-3 me-2"></i>Название отдела
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Введите название отдела" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                       

                        <input type="hidden" asp-for="OfficeId" value="@ViewBag.OfficeId" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-plus-circle me-1"></i>Создать отдел
                            </button>
                            <a asp-controller="Office" asp-action="Details" asp-route-id="@ViewBag.OfficeId" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i>Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}